/*视频播放*/
 #myVideo{
   width: 100%;
   height: 500rpx;
 }
.video_cover{
  width:100%;
  height:100%;
  position:relative;
}
.video_play_icon{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  width:40px;
  height:40px;
  z-index:5
}
.video_bg_black{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  height: 100%;
  width: 100%;
  background:rgba(0,0,0,.5);
  display:flex;
  justify-content: center;
  align-items: center;
}
.video_cover_txt{
  display:flex;
