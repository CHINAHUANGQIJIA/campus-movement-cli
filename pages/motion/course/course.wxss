/* pages/motion/course/course.wxss */
.row {
  display: flex;
}

/**导航栏**/
.tab-h {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 20px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  margin: 0 40rpx;
  display: inline-block;
  width: 25%;
  font-size: 35rpx;
  font-weight: 600;
  text-align: center;
}

.tab-item.active {
  color: rgb(255, 158, 32);
  position: relative;
  
}

.tab-item.active:after {text-align: center;
  content: "";
  display: block;
  height: 5rpx;
  width: 100%;
  background: rgb(255, 158, 32);
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #B0B0B0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675F9;
  color: #4675F9;
}

.tab-content {
  margin-top: 80rpx;
}

.scoll-h {
  height: 100%;
  margin-bottom: 300rpx;
}


/* 全部 */
.course-list {
  margin: 30rpx;
  height: 300rpx;

}

.course-list-img-box {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

}

.course-list-img {
  filter: brightness(0.65);
  height: 300rpx;
  width: 90%;
  margin: 0 auto;
  position: absolute;
  border-radius: 8rpx;

}

.course-txt {
  position: absolute;
  margin-top: 170rpx;
  color: white;
  width: 70%; 
  margin-left: 50rpx;
}

.cell-txt {
  font-weight: 900;
  letter-spacing: 5rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
 
}

.cell-text {
  font-weight: 400;
  letter-spacing: 3rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
 
 

}

.cell-a {
  margin-left: 50rpx;
  margin-top: 30rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cell-img {
  height: 60rpx;
  width: 60rpx;
  

}

.cell-name {
  color: rgb(255, 255, 255);
  margin-left: 15rpx;
  font-size: 32rpx;
  font-weight: 900;
}