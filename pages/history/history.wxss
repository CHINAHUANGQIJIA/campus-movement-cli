.history-container{

  height: 400rpx;
}
.history-container-img{
  height: 400rpx;
  filter: brightness(0.90);
  width: 100%;

  position: absolute;
}
.history-container-text{
  position: absolute;
  width: 70%;
  margin-left: 30rpx;
  height: 150rpx;
  display: flex;
  margin-top: 250rpx;
}
.history-container-text-img{
  height: 100rpx;
  width: 100rpx;


}
.history-a{
  display: flex;
justify-content: center;
align-items: center;
width: 30%;
}
.history-b{
  color: white;
  font-size: 40rpx;
}

/*列表*/
.containerr{
  background-image: linear-gradient(-45deg, rgba(246,195,235,0.5) 0%, rgba(169,193,239,0.5) 100%);
  padding: 0;
  min-height: 100vh;
  margin: 0;
  padding-top: 20rpx;
}
.history-box{
  background-color: rgba(255,255,255,0.5);
  display: flex;
  height: 150rpx;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20rpx;

  border-radius: 6rpx;

}
.history-box-a{
  width: 30%;
  display: flex;
justify-content: center;
align-items: center;
}
.history-box-a-img{
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
}
.history-box-b{
  width: 70%;
  padding: 10rpx;
}
.history-box-title{
  height: 80rpx;
  font-weight: 500;
  color: rgb(115, 117, 118);
  font-size: 32rpx;
}
.history-box-txt{
  height: 50rpx;
  margin-top: 12rpx;
  color: gray;
  font-size: 30rpx;
}