/* pages/login/login.wxss */
page {

  background-attachment: fixed;
  background-repeat:no-repeat;
   background-size:100% 100%;
}
.login-title {
  position: absolute;
  top:150rpx;
  left:200rpx;
  color: rgb(112, 109, 109);
  font-size: 10vw;
  font-family: "Lucida Console", Courier, monospace;
  font-weight: 900;
}
.login-view {
  position: fixed;
  position: absolute;
  top: 450rpx;
  margin-left: 80rpx;
}
.login-margin {
  margin: 40rpx;
}

.login-input {
  flex: block;
  color: rgb(112, 109, 109);
  width: 88%;
  margin-left:-20rpx ;
  float: right;
}
.login-input-code{
  flex: block;
  color: rgb(112, 109, 109);
  font-size: 26rpx;
  width: 90%;
  float: right;
  margin-left:20rpx;
}

.login-line {
  height: 5rpx;
  background-color: rgb(112, 109, 109);
  width: 70vw;
}

.login-btn-view {
  width: 100%;
  height: auto;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  padding-bottom: 0rpx;
}

.login-flex {
  display: flex;
}
.login-code {
  background-color: rgb(112, 109, 109);
  opacity:0.7;
  font-size: 20rpx;
  float: right;
   color: rgb(112, 109, 109);
   border-radius: 50rpx;
   padding: 0;
}

.login-change-btn {
  color:rgb(112, 109, 109);
  font-size:30rpx;
  display: flex;
  font-weight: 900;
  margin-left: 120rpx;
}
.login-change {
  margin:0 5rpx;
}

.phcolor {
  font-size: 32rpx;
  color: rgb(191, 188, 188);
  font-weight: 700rpx;

}
.login-forget {
  color:rgb(112, 109, 109);
  text-align: center;
  font-size: 30rpx;
  margin-top:150rpx;
  font-weight: 900;
  margin-right: 40rpx;
}

.login-image {
  width:20px;
  height:20px;
}
.timage{
  height: 220rpx;
  width: 220rpx;
  position: absolute;
  top: -300rpx;
  left: 180rpx;
  border-radius: 1000rpx;
}
