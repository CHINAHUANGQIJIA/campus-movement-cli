

page {

  background-image: linear-gradient(to bottom, white, rgb(226, 226, 224),rgb(228, 228, 228),rgb(244, 244, 240));
  background-attachment: fixed;
min-height: 100%;
}
.from{
width: 85%;
margin-left: -43rpx;
}
.container {

min-height: 100%;
padding-top: 30rpx;
}

.fb-body {
margin-top: 20rpx;
width: 100%;
background: #fff;
height: 480rpx;
padding: 18rpx 30rpx 34rpx 30rpx;
}

.fb-body .content {
width: 100%;
height: 280rpx;
color: #333;
line-height: 40rpx;
font-size: 28rpx;
}
.weui-uploader__files {
width: 100%;
}
.weui-uploader__file {
float: left;
margin-right: 19rpx;
margin-bottom: 19rpx;
}
.weui-uploader__img {
display: block;
width: 100rpx;
height: 100rpx;
}
.weui-uploader__input-box {
float: left;
position: relative;
margin-right: 20rpx;
margin-bottom: 20rpx;
width: 100rpx;
height: 100rpx;
border: 1rpx solid #d9d9d9;
}

.weui-uploader__input-box:after, .weui-uploader__input-box:before {
content: " ";
position: absolute;
top: 50%;
left: 50%;
-webkit-transform: translate(-50%, -50%);
transform: translate(-50%, -50%);
background-color: #d9d9d9;
}

.weui-uploader__input-box:before {
width: 4rpx;
height:60.5rpx;
}

.weui-uploader__input-box:after {
width: 60.5rpx;
height: 4rpx;
}

.weui-uploader__input-box:active {
border-color: #999;
}

.weui-uploader__input-box:active:after, .weui-uploader__input-box:active:before {
background-color: #999;
}

.weui-uploader__input {
position: absolute;
z-index: 1;
top: 0;
left: 0;
width: 100%;
height: 100%;
opacity: 0;
}

.fb-body .text-count {
line-height: 30rpx;
float: right;
color: #666;
font-size: 24rpx;
}
.fb-info {
height: 162rpx;
width: 100%;
}
.fb-info .label {
height: 58rpx;
width: 100%;
padding-top: 14rpx;
padding-bottom: 11rpx;
color: #7f7f7f;
font-size: 24rpx;
padding-left: 30rpx;
padding-right: 30rpx;
line-height: 33rpx;
}
.fb-info .info-box {
height: 104rpx;
width: 100%;
color: #333;
padding-left: 30rpx;
padding-right: 30rpx;
font-size: 24rpx;
background: #fff;
position: relative;
}
.fb-info .info {
position: absolute;
top: 27rpx;
left: 30rpx;
height: 50rpx;
width: 100%;
color: #333;
line-height: 50rpx;
font-size: 24rpx;
}
.fb-info .clear-icon {
position: absolute;
top: 27rpx;
right: 30rpx;
width: 48rpx;
height: 48rpx;
z-index: 2;
}
.clear-icon{
position: absolute;
top: 600rpx;
right: 50rpx;
width: 48rpx;
height: 48rpx;
z-index: 2;
}
.imagede{
position: absolute;
top: 650rpx;
right: 570rpx;
