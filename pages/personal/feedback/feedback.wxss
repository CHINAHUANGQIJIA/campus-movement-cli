}
.fb-btn {
right: 0;
display: flex;
justify-content: center;
align-items: center;
width: 80%;
height: 90rpx;
line-height: 98rpx;
position: absolute;
font-size: 48rpx;
bottom: 130rpx;
left: 0;
border-radius: 0;
padding: 0;
margin: 0;
margin-left: 10%;
text-align: center;
/* padding-left: -5rpx; */
font-size: 25rpx;
color: #f4f4f4;
border-top-left-radius: 50rpx;
border-bottom-left-radius: 50rpx;
border-top-right-radius: 50rpx;
border-bottom-right-radius: 50rpx;
letter-spacing: 3rpx;
background-image: linear-gradient(-45deg, #f59453 0%, #f9f297 100%);


}
.fb-btn:active{
